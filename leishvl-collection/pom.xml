<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>io.leishvl</groupId>
		<artifactId>leishvl</artifactId>
		<version>1.0.0</version>
		<relativePath>..</relativePath>
	</parent>
	
	<artifactId>leishvl-collection</artifactId>
	<name>leishvl-collection</name>
	<description>LeishVL document collections storage</description>
	<url>http://eubrazilcc.github.io/leishvl/</url>
	
	<dependencies>
		<!-- LeishVL modules -->
		<dependency>
			<groupId>io.leishvl</groupId>
			<artifactId>leishvl-microservices-core</artifactId>
			<version>${io.leishvl.version}</version>
		</dependency>
		
		<!-- Vert.x open-source event-driven application framework and toolkit that runs on the JVM -->
		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-auth-shiro</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-web</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-sockjs</artifactId>
			<scope>provided</scope>
		</dependency>		
		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-mail-client</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-hazelcast</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>io.vertx</groupId>
			<artifactId>vertx-unit</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
		<!-- Build -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>				
			</plugin>
			<!-- JUnit test -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<argLine>-Xmx2048M -Xss1024k -XX:+UseConcMarkSweepGC</argLine>
					<!-- Configure JUnit tests to go through the JUnit test suite -->
					<includes>
						<include>**/AllJUnitTests.java</include>
					</includes>
				</configuration>
			</plugin>
			<!-- Integration test (inherit default configuration from parent project) -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<configuration>
					<argLine>-Xmx2048M -Xss1024k -XX:+UseConcMarkSweepGC</argLine>
					<!-- Configure integration tests to go through the JUnit test suite -->
					<includes>
						<include>**/AllIntegrationTests.java</include>
					</includes>
				</configuration>				
			</plugin>
			<!-- Package application into executable JAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>${maven-shade-plugin.version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<transformers>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>io.leishvl.collection.AppDaemon</mainClass>
									<manifestEntries>
										<X-Compile-Source-JDK>${maven.compiler.source}</X-Compile-Source-JDK>
										<X-Compile-Target-JDK>${maven.compiler.target}</X-Compile-Target-JDK>
									</manifestEntries>
								</transformer>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ApacheLicenseResourceTransformer"></transformer>
								<transformer implementation="org.apache.maven.plugins.shade.resource.ApacheNoticeResourceTransformer">
									<addHeader>false</addHeader>
								</transformer>
							</transformers>
							<outputFile>${project.build.directory}/${project.artifactId}-${project.version}-uber.jar</outputFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>